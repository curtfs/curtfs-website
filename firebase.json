{
  "hosting": {
    "public": "dist/curt",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/robots.txt",
        "destination": "/robots.txt"
      },
      {
        "source": "/tos.txt",
        "destination": "/tos.txt"
      },
      {
        "source": "/privacy.txt",
        "destination": "/privacy.txt"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
